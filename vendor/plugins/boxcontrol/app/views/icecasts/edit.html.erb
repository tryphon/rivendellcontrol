<%= title_tag t(".title") %>

<% form_for @icecast, :url => icecast_path do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :source_password, Icecast.human_attribute_name("source_password") %><br/>
    <%= f.text_field :source_password %>
  </p>

  <p>
    <%= f.label :clients, Icecast.human_attribute_name("clients") %><br/>
    <%= f.text_field :clients %>
  </p>

  <p>
    <%= f.submit t(".submit") %> 
    <%= t("or") %> <%= link_to "#{t(".cancel")} &#8250;", input_path %>
  </p>
<% end %>

