<%= title_tag Icecast.human_name %>

<div class="description">
  <p>
    <%= Icecast.human_attribute_name("source_password") %> :
    <%= @icecast.source_password or content_tag(:em, t(".undefined")) %>
  </p>

  <p>
    <%= Icecast.human_attribute_name("clients") %> :
    <%= @icecast.clients %>
  </p>
</div>

<div class="actions">
  <%= link_to t("actions.edit"), edit_icecast_path, :class => "edit" %>
</div>

<div class="inline_help">
  <p>
    <%= render :partial => 'show_inline_help' %>
  </p>
</div>


