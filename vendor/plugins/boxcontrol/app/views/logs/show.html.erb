<%= title_tag Log.human_name %>

<% form_tag log_path, :method => :get do %>
  <label for="search"><%= t(".filter") %>:</label>
  <%= text_field_tag 'search', params[:search] %>
  <%= submit_tag t(".submit"), :name => "" %>
<% end %>

<textarea class="log" value="" rows="25" cols="80"><%= @log.last_lines %></textarea>

<div class="actions">
  <%= link_to t("logs.actions.download"), log_path(:format => :gz), :class => "download" %>
</div>

