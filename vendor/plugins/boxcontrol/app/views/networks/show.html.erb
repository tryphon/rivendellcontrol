<%= title_tag Network.human_name %>

<div class="description">
  <p>
    <%= @network.presenter.method_name %>
  </p>
  
  <% if @network.manual? %>
  <h3><%= t(".static_properties") %></h3>

  <p>
    <%= Network.human_attribute_name("static_address") %> :
    <%= @network.static_address %>
  </p>

  <p>
    <%= Network.human_attribute_name("static_netmask") %> :
    <%= @network.static_netmask %>
  </p>

  <p>
    <%= Network.human_attribute_name("static_gateway") %> :
    <%= @network.static_gateway %>
  </p>

  <p>
    <%= Network.human_attribute_name("static_dns1") %> :
    <%= @network.static_dns1 %>
  </p>
  <% end %>
</div>

<div class="actions">
  <%= link_to t("actions.edit"), edit_network_path, :class => "edit" %>
</div>
